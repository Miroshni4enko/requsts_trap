<%= csrf_meta_tags %>
<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>
<body>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="/">Requests Trap</a>
    </li>
    <li class="nav-item active">
      <a class="nav-link" href="/requests/all">Trapped Urls</a>
    </li>
  </ul>
</nav>

<div class="container pt-4">
  <h2>url - <%= @url %>  </h2>
  <div class="list-group">
    <% @url_requests.each do |url_request| %>
      <a class="list-group-item">
        <h4 class="list-group-item-heading">Creation Date</h4>
        <p class="list-group-item-text"><%= url_request["request"]["creation_date"] %></p>

        <h4 class="list-group-item-heading">Remote Ip</h4>
        <p class="list-group-item-text"><%= url_request["request"]["remote_ip"] %></p>

        <h4 class="list-group-item-heading">Headers</h4>
        <p class="list-group-item-text trancate-long-string"><%= url_request["request"]["headers"] %></p>

        <h4 class="list-group-item-heading">Cookies</h4>
        <p class="list-group-item-text trancate-long-string"><%= url_request["request"]["cookies"] %></p>

        <h4 class="list-group-item-heading">Query-params</h4>
        <p class="list-group-item-text trancate-long-string"><%= url_request["request"]["query-params"] %></p>

        <h4 class="list-group-item-heading">Query-string</h4>
        <p class="list-group-item-text trancate-long-string"><%= url_request["request"]["query-string"] %></p>

        <h4 class="list-group-item-heading">Query-params</h4>
        <p class="list-group-item-text trancate-long-string"><%= url_request["request"]["request-method"] %></p>

        <h4 class="list-group-item-heading">Scheme</h4>
        <p class="list-group-item-text trancate-long-string"><%= url_request["request"]["scheme"] %></p>
      </a>
    <% end %>
  </div>
</div>
</body>
</html>